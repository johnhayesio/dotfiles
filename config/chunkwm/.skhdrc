# open apps
ctrl + cmd - d : open -a Firefox\ Developer\ Edition
ctrl + cmd - f : open -a Finder
ctrl + cmd - w : open -a Firework
ctrl + cmd - e : open -a Twobird
ctrl + cmd - c : open -a Fantastical\ 2
ctrl + cmd - b : open -a qutebrowser

# dev apps
ctrl + cmd - t : /Applications/Alacritty.app/Contents/MacOS/alacritty
ctrl + cmd - m : /Applications/MongoDB\ Compass.app/Contents/MacOS/MongoDB\ Compass
ctrl + cmd - p : open -a Postman

# enter fullscreen mode for the focused container
shift + alt - f : chunkc tiling::window --toggle fullscreen

# change focus between tiling / floating windows
shift + alt - space : chunkc tiling::window --toggle float

# change layout of desktop
shift + alt - e : chunkc tiling::desktop --layout bsp
shift + alt - o : chunkc tiling::desktop --layout monocle

# kill focused window
shift + alt - q : chunkc tiling::window --close

# change focus
cmd + alt - h : chunkc tiling::window --focus west
cmd + alt - j : chunkc tiling::window --focus south
cmd + alt - k : chunkc tiling::window --focus north
cmd + alt - l : chunkc tiling::window --focus east

cmd + alt - p : chunkc tiling::window --focus prev
cmd + alt - n : chunkc tiling::window --focus next

# move focused window
shift + alt - h : chunkc tiling::window --warp west
shift + alt - j : chunkc tiling::window --warp south
shift + alt - k : chunkc tiling::window --warp north
shift + alt - l : chunkc tiling::window --warp east

shift + alt - i : chunkc tiling::desktop --rotate 90
shift + alt - u : chunkc tiling::desktop --rotate 270

# move floating window
shift + alt - up : chunkc tiling::window --grid-layout 1:1:0:0:1:1
shift + alt - left : chunkc tiling::window --grid-layout 1:2:0:0:1:1
shift + alt - right : chunkc tiling::window --grid-layout 1:2:1:0:1:1
shift + alt - down : chunkc tiling::window --grid-layout 14:14:1:1:12:12

# resize focused window
shift + alt - a : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge west; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east
shift + alt - s : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge south; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge north
shift + alt - w : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge north; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge south
shift + alt - d : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge east; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west

# equalize all windows
shift + alt - r : chunkc tiling::desktop --equalize

# create desktop, move window and follow focus
shift + cmd - n : chunkc tiling::desktop --create;\
                  ids=$(chunkc tiling::query --desktops-for-monitor $(chunkc tiling::query --monitor-for-desktop $(chunkc tiling::query --desktop id)));\
                  chunkc tiling::window --send-to-desktop $(echo ${ids##* });\
                  chunkc tiling::desktop --focus $(echo ${ids##* })

# move focused container to workspace
shift + alt - m : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop)
shift + alt - p : chunkc tiling::window --send-to-desktop prev
shift + alt - n : chunkc tiling::window --send-to-desktop next
shift + alt - z : chunkc tiling::window --send-to-desktop 1; chunkc tiling::desktop --focus mission-control 1
shift + alt - x : chunkc tiling::window --send-to-desktop 2; chunkc tiling::desktop --focus mission-control 2
shift + alt - c : chunkc tiling::window --send-to-desktop 3; chunkc tiling::desktop --focus mission-control 3
shift + alt - v : chunkc tiling::window --send-to-desktop 4; chunkc tiling::desktop --focus mission-control 4
shift + alt - b : chunkc tiling::window --send-to-desktop 5; chunkc tiling::desktop --focus mission-control 5

# move focused container to monitor
shift + cmd - a : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1
shift + cmd - s : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2
