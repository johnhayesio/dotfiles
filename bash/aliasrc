alias dls="cd ~/Downloads && clear && l"

# youtube-dl
alias ytv="youtube-dl -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/mp4' -v -o '~/Documents/yt_DLs/Videos/%(title)s.%(ext)s'"
alias ytp="youtube-dl -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/mp4' -v -o '~/Documents/yt_DLs/Playlists/%(playlist)s/%alias (playlist_index)s - %(title)s.%(ext)s'"
alias ytm="youtube-dl -f mp3 -v -o '~/Documents/yt_DLs/Audio/%(title)s.%(ext)s'"
alias ytl="youtube-dl --write-srt --sub-lang en -f 'bestvideo[ext=mp4]+bestaudio[ext=m4a]/mp4' -v -o '~/Documents/yt_DLs/Videos/%(title)s.%(ext)s'"

# Video Playback
alias vlcn="vlc --no-video-deco --no-embedded-video --no-playlist-autostart --no-macosx-autoplay"
alias crad="mpv --no-video https://www.youtube.com/watch\?v\=bebuiaSKtU4"
alias mpvp="xargs -I REPLACESTRING mpv --playlist=REPLACESTRING <<<"
alias mpvps="~/dotfiles/bash/mpvps"
