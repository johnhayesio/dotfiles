#!/bin/bash

fr() {
  if [ $# -eq 0 ]; then
    echo
    echo "Please run fd command again with a filename and directory"
    echo "Example: fd App.js src"
    echo
  elif [ $# -eq 1 ]; then
    echo
    echo "Please run fd command again with a filename and directory"
    echo "Example: fd App.js src"
    echo
  else
    mkdir -p $2
    find . -iname "*$1*" -type f -exec cp {} ./$2 \;
  fi
}
